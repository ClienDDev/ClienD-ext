{
    "manifest_version": 2,
    "name": "ClienD extension",
    "short_name": "ClienD-ext",
    "description": "Расширение исправляет некоторые ошибки в интерфейсе сайта edu.tatar.ru и добавляет несколько функций к веб-приложению",
    "version": "1.0",
    "author": "atnartur",
    
    "icons": {
        "19": "images/logo19.png",
        "38": "images/logo38.png",
        "48": "images/logo48.png",
        "144": "images/logo144.png"
    },
    
    "browser_action": {
        "default_icon": {
            "19": "images/logo19.png",
            "38": "images/logo38.png"            // optional
        },
        "default_title": "ClienD extension",      // optional; shown in tooltip
        "default_popup": "pages/popup.html"        // optional
    },
    
	"permissions": [
        "tabs",
		"http://edu.tatar.ru/*",
		"https://edu.tatar.ru/*",
        "https://wifiauth.tatar.ru/*",
		"http://wifiauth.tatar.ru/*",
        "http://cliend.ru/*",
        "http://dev.cliend.ru/*"
	],
    "background": {
        "scripts": ["js/bg.js"]
    },
    "content_scripts": [{
        "matches": [
			"http://edu.tatar.ru/*",
            "https://edu.tatar.ru/*",
            "https://wifiauth.tatar.ru/*",
            "http://wifiauth.tatar.ru/*",
            "http://cliend.ru/*"
		],
        "js": [
			"/js/jquery.min.js",
			"/js/sites.js"
		],
    	"run_at": "document_end"
    }],
    "web_accessible_resources": [
        "images/logo19.png",
        "images/logo38.png",
        "images/logo48.png",
        "images/logo144.png",
        
        "/styles/cliend.ru-base.min.css",
        "/styles/fonts.css",
        "/styles/sites.min.css",
        
        "/styles/sites.less",
        
        "/js/jquery.min.js",
        "/js/less.min.js",
        "/js/sites.js",
        
        "/fonts/Roboto100.woff",
        "/fonts/Roboto300.woff",
        "/fonts/Roboto700.woff"
    ]
}
